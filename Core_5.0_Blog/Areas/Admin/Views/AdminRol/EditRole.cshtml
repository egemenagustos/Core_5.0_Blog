@using Core_5._0_Blog.Models
@model RoleUpdateViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-content">

                <form method="post" asp-action="EditRole" asp-controller="AdminRol" asp-area="Admin">
                    <div class="form-group  row">
                        <input type="hidden" asp-for=Id>
                        <label class="col-sm-2 col-form-label">Rol Başlığı</label>
                        <div class="col-sm-10"><input type="text" class="form-control" asp-for="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-white btn-sm" type="reset">İptal Et</button>
                            <button class="btn btn-primary btn-sm" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

