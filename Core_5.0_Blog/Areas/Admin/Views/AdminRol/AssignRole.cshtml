@model List<RoleAssignViewModel>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<form method="post">
    @for(int i=0; i< Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleID"/>
            <input type="hidden" asp-for="@Model[i].Name"/>
            <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input"/>
            <label class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label>
        </div>
    }
    <br />
    <button class="btn btn-sm btn-outline-primary">Değişikleri kaydet</button>
</form>
<br />
    <a href="/Admin/AdminRol/UserRoleList/" class="btn btn-sm btn-success">Kullanıcı listesine geri dön</a>


