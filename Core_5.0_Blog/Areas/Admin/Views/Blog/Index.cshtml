@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        @foreach (var item in Model)
        {
        <div class="col-md-3">
            <div class="ibox">
                <div class="ibox-content product-box">

                    <div class="product-imitation">
                       <img src="@item.BlogThumbnailImage" style="width:100%; height:270px">
                    </div>
                    <div class="product-desc">
                        <span class="product-price">
                            @item.Category.CategoryName
                        </span>
                            <small class="text-muted">  @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</small>
                        <a href="#" class="product-name"> @item.BlogTitle</a>



                        <div class="small m-t-xs">
                            @item.BlogContent.Substring(0, item.BlogContent.Substring(0, 100).LastIndexOf(" "))....
                        </div>
                        <div class="m-t text-righ">

                            <a href="/Blog/BlogReadAll/@item.BlogID" class="btn btn-xs btn-outline btn-primary">Bloga Git <i class="fa fa-long-arrow-right"></i> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>








