@model EntityLayer.Concrete.Message2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ComposeMessage";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}


<body>
    <div class="wrapper wrapper-content">
        <div class="row">
            @await Component.InvokeAsync("MessageNavbar")
            <div class="col-lg-9 animated fadeInRight">
                <div class="mail-box-header">
                    <div class="float-right tooltip-demo">
                        <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Taslak"><i class="fa fa-pencil"></i> Taslak</a>
                        <a href="mailbox.html" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="İptal Et"><i class="fa fa-times"></i> İptal Et</a>
                    </div>
                    <h2>
                        Yeni Mesaj Oluştur
                    </h2>
                </div>
                <div class="mail-box">


                    <div class="mail-body">

                        <form method="post" asp-action="ComposeMessage" asp-controller="Message">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Alıcı:</label>

                                <div class="col-sm-10"><input type="text" class="form-control"></div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Konu:</label>

                                <div class="col-sm-10"><input type="text" class="form-control" asp-for=Subject></div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Mesajınız:</label>

                                <div class="col-sm-10"><textarea class="form-control" asp-for="MessageDetails"></textarea></div>
                            </div>
                            <br />
                            <div class="float-right">
                            <button type="submit" class="btn btn-sm btn-primary">Gönder</button>
                            </div>
                            <br />
                        </form>

                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</body>

