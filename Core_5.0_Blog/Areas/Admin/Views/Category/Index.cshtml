@using X.PagedList
@using X.PagedList.Mvc.Core

@model IPagedList<EntityLayer.Concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Pasif Yap</th>
        <th>Aktif Yap</th>
        <th>Düzenle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td><a href="#" class="btn btn-sm btn-danger">Pasif Yap</a></td>
            <td><a href="#" class="btn btn-sm btn-success">Aktif Yap</a></td>
            <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID" class="btn btn-sm btn-info" id="Deletebtn" onclick="return confirm('Silmek istediğinize emin misiniz ?');">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Admin/Category/AddCategory/" class="btn btn-sm btn-primary">Yeni Kategori</a>
<br /><br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index", new{page}))

