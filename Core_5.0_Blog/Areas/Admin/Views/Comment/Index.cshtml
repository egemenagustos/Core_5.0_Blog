@using EntityLayer.Concrete
@model List<Comment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@{
    string color = "";
    string icon = "";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kullanıcı</th>
                                <th>Başlık</th>
                                <th>Blog</th>
                                <th>Puan</th>
                                <th>Tarih</th>
                                <th>Sil</th>
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                if(item.BlogScore <= 3)
                            {
                                color = "text-danger";
                                icon = "fa fa-level-down";
                            }
                            else if(item.BlogScore <=6)
                            {
                                color = "text-warning";
                                icon = "fa fa-level-up";
                            }
                            else if(item.BlogScore <=8)
                            {
                                color = "text-primary";
                                icon = "fa fa-level-up";
                            }
                            else if(item.BlogScore <=10)
                            {
                                color = "text-navy";
                                icon = "fa fa-level-up";
                            }
                            <tr>
                                <th>@item.CommentID</th>
                                <td>@item.CommentUserName</td>
                                <td>@item.CommentTitle</td>
                                <td>@item.Blog.BlogTitle</td>
                                <td class="@color"><i class="@icon"></i> @item.BlogScore</td>
                                <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
                                <td><a href="#" class="btn btn-sm btn-outline-danger">Sil</a></td>
                                <td><a href="#" class="btn btn-sm btn-outline-success">Düzenle</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>








