@model EntityLayer.Concrete.Message2

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" method="post" asp-controller="Message" asp-action="SendMessage">
                <div class="form-group">
                    <label for="exampleInputName1">Konu</label>
                    <input type="text" asp-for=Subject class="form-control" placeholder="Konu">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Mesaj İçeriği</label>
                    <textarea asp-for="MessageDetails" class="form-control" placeholder="Mesaj"></textarea>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Mesajı Gönder</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>

