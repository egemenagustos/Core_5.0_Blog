@model EntityLayer.Concrete.Writer

@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" method="post" enctype="multipart/form-data" asp-controller="Writer" asp-action="WriterAdd">
                <div class="form-group">
                    <label for="exampleInputName1">Adı & Soyadı</label>
                    <input type="text"  asp-for=WriterNameSurname class="form-control" id="exampleInputName1" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresi</label>
                    <input type="email" asp-for=WriterMail as class="form-control" id="exampleInputEmail3" placeholder="Email">
                    <span asp-validation-for="WriterMail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    <input type="password" asp-for=WriterPassword class="form-control" id="exampleInputPassword4" placeholder="Yeni Şifre">
                    <span asp-validation-for="WriterPassword" class="text-danger"></span>
                </div>
               <div class="form-group">
                    <label>Yazar Görsel</label>
                    <input type="file" asp-for="WriterImage" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Yeni Resim">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Yazar Hakkında</label>
                    <textarea class="form-control" asp-for=WriterAbout id="exampleTextarea1" rows="4"></textarea>
                    <span asp-validation-for="WriterAbout" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>

