@model UserSignUpViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Kayıt</title>

    <link href="~/byadmin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/byadmin/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/byadmin/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/byadmin/css/animate.css" rel="stylesheet">
    <link href="~/byadmin/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">IN+</h1>

            </div>
            <h3>Kayıt Ekranı</h3>
            <p>Yeni bir hesap oluşturun</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <input type="text" asp-for=NameSurname class="form-control" placeholder="Adınız Soyadınız" >
                    <span asp-validation-for="NameSurname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="text" asp-for=UserName class="form-control" placeholder="Kullanıcı Adınız" >
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="email" asp-for=Mail class="form-control" placeholder="Mail Adresiniz">
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" asp-for=Password class="form-control" placeholder="Şifreniz">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" asp-for=ConfirmPassword class="form-control" placeholder="Şifre Tekrar">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox" required><i></i> Kullanım şartlarını okudum kabul ediyorum. </label></div>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Bir hesabınız var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Login/Index">Giriş Yap</a>
            </form>
        </div>
    </div>
    <!-- Mainly scripts -->
    <script src="~/byadmin/js/jquery-3.1.1.min.js"></script>
    <script src="~/byadmin/js/popper.min.js"></script>
    <script src="~/byadmin/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/byadmin/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>
</html>
