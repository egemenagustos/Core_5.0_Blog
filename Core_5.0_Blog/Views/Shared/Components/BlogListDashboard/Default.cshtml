@using EntityLayer.Concrete
@model List<Blog>

@{
    string category = "";
}
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.Category.CategoryName == "Yazılım")
                                {
                                    category = "badge badge-gradient-warning";
                                }
                                else if (item.Category.CategoryName == "Tiyaro")
                                {
                                    category = "badge badge-gradient-primary";
                                }
                                else if (item.Category.CategoryName == "Sinema")
                                {
                                    category = "badge badge-gradient-dark";
                                }
                                else if (item.Category.CategoryName == "Teknoloji")
                                {
                                    category = "badge badge-gradient-danger";
                                }
                                <tr>
                                    <th> @item.BlogID </th>
                                    <td>
                                        <img src="@item.BlogThumbnailImage" class="mr-2" alt="image"> @item.BlogTitle
                                    </td>
                                    <td>
                                        <label class="@category">@item.Category.CategoryName</label>
                                    </td>
                                    <td> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy")) </td>
                                    <td><a href="#" class="btn btn-sm btn-success">Detaylar</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
