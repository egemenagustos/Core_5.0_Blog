<div class="tech-btm">
    <p>Teknoloji yazılım ve diğer kategorilerimize abone olun. </p>
    <form method="post">
        <input type="email" placeholder="Email" required="" name="Mail" id="txtMail">
        <input type="submit" value="Subscribe" id="btnAdd">
    </form>

</div>
<script>

    $("#btnAdd").click(function () {
        let values = {
            Mail: $("#txtMail").val()
        };

        $.ajax({
            type: "post",
            url: "/NewsLetter/SubscribeMail/",
            data : values,
            success: function(func){
                let result = jQuery.parseJSON(func);
                alert("maili başarıyla eklendi")
            }
        });
    });

</script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
